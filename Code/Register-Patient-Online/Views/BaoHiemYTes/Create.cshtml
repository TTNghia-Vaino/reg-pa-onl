@model Register_Patient_Online.Models.BaoHiemYTe


@{
    ViewData["Title"] = "Thêm Bảo Hiểm Y Tế";
}

<h1>Thêm</h1>
<h4>Bảo Hiểm Y Tế</h4>
<hr />
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Tạo Mới Thông Tin Bảo Hiểm</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="MaBhyt" class="form-label fw-bold">Mã BHYT</label>
                    <input asp-for="MaBhyt" class="form-control" placeholder="Nhập mã BHYT" />
                    <span asp-validation-for="MaBhyt" class="text-danger"></span>
                </div>

                <!-- Dropdown cho giới tính -->
                <div class="form-group mb-3">
                    <label asp-for="GioiTinh" class="form-label fw-bold">Giới Tính</label>
                    <select asp-for="GioiTinh" class="form-select">
                        <option value="1">Nam</option>
                        <option value="0">Nữ</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgayBd" class="form-label fw-bold">Ngày Bắt Đầu</label>
                    <input asp-for="NgayBd" class="form-control" type="date" />
                    <span asp-validation-for="NgayBd" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgayHh" class="form-label fw-bold">Ngày Hết Hạn</label>
                    <input asp-for="NgayHh" class="form-control" type="date" />
                    <span asp-validation-for="NgayHh" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NgaySinh" class="form-label fw-bold">Ngày Sinh</label>
                    <input asp-for="NgaySinh" class="form-control" type="date" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Tạo Mới</button>
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-controller="Home" asp-action="Index">Quay về Trang chủ</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
