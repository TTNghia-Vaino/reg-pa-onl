@model Register_Patient_Online.Models.DangKyKham

@{
    ViewData["Title"] = "Create";
    var user = Context.Session.GetString("UserName");
    <!--Tim MaBn cua BenhNhan co NaTknavigation.TenDangNhap = user-->
}

<h1 class="text-center text-primary my-4">📋 ĐĂNG KÍ KHÁM BỆNH</h1>

<hr class="mb-4" />

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-12 shadow-lg p-4 rounded bg-light">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display: none;"></div>

            <!-- Ngày Đến Khám -->
            <div class="form-group mb-4">
                <label asp-for="NgayDenKham" class="form-label text-dark">Ngày Đến Khám</label>
                <input asp-for="NgayDenKham" class="form-control" placeholder="Nhập ngày đến khám" />
                <span asp-validation-for="NgayDenKham" class="text-danger small"></span>
            </div>

            <!-- Tên Khoa -->
            <div class="form-group mb-4">
                <label asp-for="MaKhoa" class="form-label text-dark">Tên Khoa</label>
                <select asp-for="MaKhoa" class="form-control form-select" asp-items="ViewBag.TenKhoa">
                    <option value="" disabled selected>Chọn tên khoa</option>
                </select>
                <span asp-validation-for="MaKhoa" class="text-danger small"></span>
            </div>

            <!-- Nút Đăng Ký -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg shadow-lg w-100">
                    <i class="fas fa-clipboard-check"></i> Đăng Ký
                </button>
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Quay Lại
    </a>
</div>

<!-- Include Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
