@model Register_Patient_Online.ViewModels.AuthenViewModel

@{
    ViewData["Title"] = "Xác thực";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- Tabs Navigation -->
    <ul class="nav nav-tabs justify-content-center mb-4" id="accountTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="login" aria-selected="true">
                Đăng nhập
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">
                Đăng ký
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="forgot-tab" data-bs-toggle="tab" data-bs-target="#forgot" type="button" role="tab" aria-controls="forgot" aria-selected="false">
                Quên mật khẩu
            </button>
        </li>
    </ul>

    <!-- Tabs Content -->
    <div class="tab-content" id="accountTabsContent">
        <!-- Login Tab -->
        <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
            <h3 class="text-center">Đăng nhập</h3>
            <form asp-action="Login" asp-controller="Authen" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="TenDangNhap" class="form-label">Tên đăng nhập:</label>
                    <input type="text" id="TenDangNhap" name="TenDangNhap" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="MatKhau" class="form-label">Mật khẩu:</label>
                    <input type="password" id="MatKhau" name="MatKhau" class="form-control" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </div>
                @if (TempData["LoginError"] != null)
                {
                    <p class="text-danger text-center mt-3">@TempData["LoginError"]</p>
                }
            </form>
        </div>

        <!-- Register Tab -->
        <div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
            <h3 class="text-center">Đăng ký</h3>
            <form asp-action="Register" asp-controller="Authen" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="TenDangNhap" class="form-label">Tên đăng nhập:</label>
                    <input type="text" id="TenDangNhap" asp-for="TenDangNhap" class="form-control" required>
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="MatKhau" class="form-label">Mật khẩu:</label>
                    <input type="password" id="MatKhau" asp-for="MatKhau" class="form-control" required>
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Hoten" class="form-label">Họ tên:</label>
                    <input type="text" id="Hoten" asp-for="Hoten" class="form-control" required>
                    <span asp-validation-for="Hoten" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="email" id="Email" asp-for="Email" class="form-control" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Sdt" class="form-label">Số điện thoại:</label>
                    <input type="text" id="Sdt" asp-for="Sdt" class="form-control">
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Diachi" class="form-label">Địa chỉ:</label>
                    <input type="text" id="Diachi" asp-for="DiaChi" class="form-control">
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Cccd" class="form-label">Căn cước công dân:</label>
                    <input type="number" id="Cccd" asp-for="Cccd" class="form-control">
                    <span asp-validation-for="Cccd" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                </div>
                @if (TempData["RegisterError"] != null)
                {
                    <p class="text-danger text-center mt-3">@TempData["RegisterError"]</p>
                }
                @if (TempData["RegisterSuccess"] != null)
                {
                    <p class="text-success text-center mt-3">@TempData["RegisterSuccess"]</p>
                }
            </form>
        </div>

        <!-- Forgot Password Tab -->
        <div class="tab-pane fade" id="forgot" role="tabpanel" aria-labelledby="forgot-tab">
            <h3 class="text-center">Quên mật khẩu</h3>
            <form asp-action="ForgotPassword" asp-controller="Authen" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="Email" class="form-label">Email:</label>
                    <input type="email" id="Email" name="Email" class="form-control" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-warning w-100">Gửi hướng dẫn</button>
                </div>
                @if (TempData["ForgotPasswordError"] != null)
                {
                    <p class="text-danger text-center mt-3">@TempData["ForgotPasswordError"]</p>
                }
                @if (TempData["ForgotPasswordSuccess"] != null)
                {
                    <p class="text-success text-center mt-3">@TempData["ForgotPasswordSuccess"]</p>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
