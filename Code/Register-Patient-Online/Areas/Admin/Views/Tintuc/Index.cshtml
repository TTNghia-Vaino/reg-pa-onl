@model IEnumerable<Register_Patient_Online.Models.TinTuc>

@{
    ViewData["Title"] = "Quản lý Tin Tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Danh sách Tin Tức</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Tin Tức Mới</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nội dung</th>
            <th>Ngày đăng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaTinTuc</td>
                <td>@item.NoiDung</td>
                <td>@item.NgayDang?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaTinTuc" class="btn btn-sm btn-warning">Chỉnh sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaTinTuc" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaTinTuc" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Sidebar navigation item -->
<li class="sidebar-item">
    <a class="sidebar-link" asp-area="Admin" asp-controller="TinTuc" asp-action="Index" aria-expanded="false">
        <span><i class="ti ti-news"></i></span>
        <span class="hide-menu">Quản lý Tin Tức</span>
    </a>
</li>
