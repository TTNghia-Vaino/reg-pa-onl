@model IEnumerable<Register_Patient_Online.Models.TaiKhoan>

@{
    Layout = "_Layout";  // Sử dụng layout chung đã tạo ở trên
    ViewData["Title"] = "Trang Chủ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
       
        body {
            background-color: #f4f7fc;
            font-family: 'Roboto', sans-serif;
        }

        .custom-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 1200px;
        }

        .page-title {
            font-size: 2rem;
            color: #4a90e2;
            text-align: center;
            margin-bottom: 20px;
        }

        .action-buttons .btn-create {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
            text-decoration: none;
            transition: all 0.3s ease-in-out;
        }

        .action-buttons .btn-create:hover {
            background-color: #218838;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.15);
        }

        .custom-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .custom-table thead {
            background-color: #343a40;
            color: #fff;
            text-align: center;
        }

        .custom-table th, 
        .custom-table td {
            padding: 12px 15px;
            text-align: center;
            font-size: 0.95rem;
            border-bottom: 1px solid #dee2e6;
        }

        .custom-table tbody tr:hover {
            background-color: #f1f3f5;
        }

        .btn {
            padding: 8px 15px;
            border-radius: 4px;
            color: #fff;
            font-size: 0.9rem;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-edit {
            background-color: #007bff;
            border: none;
        }

        .btn-edit:hover {
            background-color: #0056b3;
        }

        .btn-details {
            background-color: #17a2b8;
            border: none;
        }

        .btn-details:hover {
            background-color: #117a8b;
        }
    </style>
</head>
<body>
    <div class="custom-container mt-4">
        <h1 class="page-title">Trang Chủ</h1>

        <div class="action-buttons text-end mb-3">
            <a asp-action="Create" class="btn btn-create">Tạo Tài Khoản</a>
        </div>

        <table class="custom-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TenDangNhap)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MatKhau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Role)
                    </th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenDangNhap)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MatKhau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.MaTk" class="btn btn-edit">Chỉnh Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.MaTk" class="btn btn-details">Thông Tin</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
