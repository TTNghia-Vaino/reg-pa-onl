@model Register_Patient_Online.Models.TaiKhoan

@{
    Layout = "_Layout"; // Sử dụng layout chung
    ViewData["Title"] = "Tạo Tài Khoản";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Tạo Tài Khoản</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Tạo Tài Khoản" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Tên Đăng Nhập -->
                        <div class="mb-3">
                            <label asp-for="TenDangNhap" class="form-label"></label>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <!-- Mật Khẩu -->
                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label"></label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="">Chọn vai trò</option>
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Nút Tạo Tài Khoản -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo Tài Khoản
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Trở Lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
