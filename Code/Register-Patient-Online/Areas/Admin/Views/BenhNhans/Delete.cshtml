@model Register_Patient_Online.Models.BenhNhan

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "_Layout";
}

<div class="container mt-5">
    <!-- Tiêu đề -->
    <h1 class="text-danger text-center">Delete Patient</h1>
    <p class="text-warning text-center">Are you sure you want to delete this record? This action cannot be undone.</p>

    <!-- Chi tiết bệnh nhân -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Patient Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <!-- Tên -->
                <dt class="col-sm-4 font-weight-bold">Name:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Hoten)</dd>

                <!-- Số điện thoại -->
                <dt class="col-sm-4 font-weight-bold">Phone:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Sdt)</dd>

                <!-- Email -->
                <dt class="col-sm-4 font-weight-bold">Email:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <!-- Địa chỉ -->
                <dt class="col-sm-4 font-weight-bold">Address:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

                <!-- CCCD -->
                <dt class="col-sm-4 font-weight-bold">Citizen ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Cccd)</dd>

                <!-- Mã BHYT -->
                <dt class="col-sm-4 font-weight-bold">Insurance Code:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaBhytNavigation.MaBhyt)</dd>

                <!-- Mã tài khoản -->
                <dt class="col-sm-4 font-weight-bold">Account ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MaTkNavigation.MaTk)</dd>
            </dl>
        </div>
    </div>

    <!-- Nút hành động -->
    <div class="d-flex justify-content-between">
        <!-- Form xóa bệnh nhân -->
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="MaBn" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <!-- Nút quay lại -->
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
