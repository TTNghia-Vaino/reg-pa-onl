@model Register_Patient_Online.Models.BenhNhan

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-5">
    <h1 class="text-danger">Delete Patient</h1>
    <p class="text-warning">Are you sure you want to delete this record? This action cannot be undone.</p>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4>Patient Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Hoten)</dd>

                <dt class="col-sm-3 font-weight-bold">Phone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Sdt)</dd>

                <dt class="col-sm-3 font-weight-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">Address</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

                <dt class="col-sm-3 font-weight-bold">Citizen ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cccd)</dd>

                <dt class="col-sm-3 font-weight-bold">Insurance Code</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaBhytNavigation.MaBhyt)</dd>

                <dt class="col-sm-3 font-weight-bold">Account ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MaTkNavigation.MaTk)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="MaBn" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
