@model Register_Patient_Online.Models.BenhNhan

@{
    ViewData["Title"] = "Xóa Bệnh Nhân";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #dc3545;
            margin-top: 20px;
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .container {
            width: 50%;
            margin: 20px auto;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px 30px;
            border-radius: 10px;
        }

        dl {
            margin: 20px 0;
        }

        dt {
            font-weight: bold;
            color: #555;
        }

        dd {
            margin: 0 0 15px;
            color: #333;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
            border: none;
        }

            .btn-danger:hover {
                background-color: #a71d2a;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #545b62;
            }
    </style>
</head>
<body>
    <h1>Xóa Bệnh Nhân</h1>
    <h3>Bạn có chắc chắn muốn xóa bản ghi này không?</h3>

    <div class="container">
        <h4>Thông Tin Bệnh Nhân</h4>
        <hr />
        <dl>
            <dt>Họ và Tên:</dt>
            <dd>@Html.DisplayFor(model => model.Hoten)</dd>

            <dt>Số Điện Thoại:</dt>
            <dd>@Html.DisplayFor(model => model.Sdt)</dd>

            <dt>Email:</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>Địa Chỉ:</dt>
            <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

            <dt>CCCD:</dt>
            <dd>@Html.DisplayFor(model => model.Cccd)</dd>

            <dt>Mã BHYT:</dt>
            <dd>@Html.DisplayFor(model => model.MaBhytNavigation.MaBhyt)</dd>

            <dt>Mã Tài Khoản:</dt>
            <dd>@Html.DisplayFor(model => model.MaTkNavigation.MaTk)</dd>
        </dl>

        <form asp-action="Delete" style="text-align: center;">
            <input type="hidden" asp-for="MaBn" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        </form>
    </div>
</body>
</html>
