@model Register_Patient_Online.Models.BenhNhan

@{
    ViewData["Title"] = "Chi Tiết Bệnh Nhân";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #007bff;
            margin-top: 20px;
        }

        .container {
            width: 60%;
            margin: 30px auto;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px 30px;
            border-radius: 10px;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
        }

        dt {
            width: 30%;
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        dd {
            width: 70%;
            margin: 0 0 10px;
            color: #333;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            display: inline-block;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #fff;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #545b62;
            }
    </style>
</head>
<body>
    <h1>Chi Tiết Bệnh Nhân</h1>

    <div class="container">
        <h4>Thông Tin Bệnh Nhân</h4>
        <hr />
        <dl>
            <dt>Họ và Tên:</dt>
            <dd>@Html.DisplayFor(model => model.Hoten)</dd>

            <dt>Số Điện Thoại:</dt>
            <dd>@Html.DisplayFor(model => model.Sdt)</dd>

            <dt>Email:</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>Địa Chỉ:</dt>
            <dd>@Html.DisplayFor(model => model.DiaChi)</dd>

            <dt>CCCD:</dt>
            <dd>@Html.DisplayFor(model => model.Cccd)</dd>

            <dt>Mã BHYT:</dt>
            <dd>@Html.DisplayFor(model => model.MaBhytNavigation.MaBhyt)</dd>

            <dt>Mã Tài Khoản:</dt>
            <dd>@Html.DisplayFor(model => model.MaTkNavigation.MaTk)</dd>
        </dl>

        <div style="text-align: center;">
            <a asp-action="Edit" asp-route-id="@Model?.MaBn" class="btn btn-primary">Chỉnh Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
        </div>
    </div>
</body>
</html>
