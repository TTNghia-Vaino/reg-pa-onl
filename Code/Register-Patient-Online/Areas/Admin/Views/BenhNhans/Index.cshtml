@model IEnumerable<Register_Patient_Online.Models.BenhNhan>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold text-primary">Danh Sách Bệnh Nhân</h1>
    <a asp-action="Create" class="btn btn-success">+ Create New</a>
</div>

<div class="mb-3">
    <form asp-action="Index" method="get" class="d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Search by name..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Hoten)</th>
            <th>@Html.DisplayNameFor(model => model.Sdt)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
            <th>@Html.DisplayNameFor(model => model.Cccd)</th>
            <th>@Html.DisplayNameFor(model => model.MaBhytNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.MaTkNavigation)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No data available.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Hoten)</td>
                    <td>@Html.DisplayFor(modelItem => item.Sdt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cccd)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaBhytNavigation.MaBhyt)</td>
                    <td>@Html.DisplayFor(modelItem => item.MaTkNavigation.TenDangNhap)</td>
                             <td>
                                <a asp-action="Edit" asp-route-id="@item.MaBn" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.MaBn" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.MaBn" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-action="History" asp-route-id="@item.MaBn" class="btn btn-sm btn-warning">View History</a>

                            </td>
                </tr>
            }
        }
    </tbody>
</table>
