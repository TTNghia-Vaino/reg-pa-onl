<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Register_Patient_Online.styles.css" asp-append-version="true" />
</head>
<body>
    @* Kiểm tra nếu người dùng không có role "1" thì chuyển hướng về trang chính *@
    @if (Context.Session.GetString("Role") != "1")
    {
        <script>
            window.location.href = '@Url.Action("Index", "Home", new { area = "" })';
        </script>
    }

    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="admin" asp-controller="Home" asp-action="Index">Register_Patient_Online</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="admin" asp-controller="BenhNhans" asp-action="Index">Quản lý thông tin bệnh nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Patient Index</a>
                        </li>
                    </ul>
                    <div style="border: 2px solid blue; padding: 10px; border-radius: 5px;">
                        @* Hiển thị thông tin người dùng nếu đã đăng nhập *@
                        @if (Context.Session.GetString("UserName") != null)
                        {
                            <span style="color: green; font-weight: bold;">
                                Xin chào, @Context.Session.GetString("UserName")!
                            </span>
                            <form asp-area="" asp-controller="Authen" asp-action="LogOut" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-area="" asp-controller="Authen" asp-action="Login">Đăng nhập</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Section -->
    <footer class="footer mt-4 py-3 bg-dark text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2024 Register_Patient_Online. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-white">Privacy Policy</a> |
                    <a href="#" class="text-white">Terms & Conditions</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
