@model Register_Patient_Online.Models.TaiKhoan

@{
    Layout = "_Layout"; // Sử dụng layout chung
    ViewData["Title"] = "Chỉnh Sửa";
}

<style>
    /* Định dạng thẻ card */
    .card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
    }

    .card-header {
        background: linear-gradient(45deg, #ff9a00, #ff6a00);
    }

    /* Button styles */
    .btn-custom {
        background-color: #ff6a00;
        color: white;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #ff9a00;
        }

    /* Input fields */
    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff6a00;
            box-shadow: 0 0 5px rgba(255, 106, 0, 0.5);
        }

    /* Label styling */
    .form-label {
        font-weight: bold;
        color: #333;
    }

    /* Validation messages */
    .text-danger {
        font-size: 0.875rem;
        font-style: italic;
    }

    /* Center card on screen */
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center">
                    <h2 class="mb-0">Chỉnh Sửa Tài Khoản</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden Field for MaTk -->
                        <input type="hidden" asp-for="MaTk" />

                        <!-- Tên Đăng Nhập -->
                        <div class="mb-3">
                            <label asp-for="TenDangNhap" class="form-label"></label>
                            <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" readonly />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <!-- Mật Khẩu -->
                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label"></label>
                            <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-select">
                                <option value="">Chọn vai trò</option>
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Nút Lưu -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-custom">
                                <i class="bi bi-save"></i> Lưu Thay Đổi
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Trở Lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
